{
    "name": "exolnet/laravel-translation-editor",
    "description": "Allow translation edition through the browser",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre D'Eschambeault",
            "email": "adeschambeault@exolnet.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "illuminate/console": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/contracts": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/http": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/support": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/routing": "~5.4.0|~5.5.0|~5.6.0",
        "illuminate/translation": "~5.4.0|~5.5.0|~5.6.0"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit" : "^5.7",
        "orchestra/testbench" : "~3.4.6|~3.5.0|~3.6.0"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Translation\\Editor\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Translation\\Editor\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "phpcs -p --standard=PSR2 src tests",
        "lint-fix": "phpcbf -p --standard=PSR2 src tests",
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Translation\\Editor\\TranslationEditorServiceProvider"
            ]
        }
    }
}
